<%- include('partials/header') -%>
<%- include('partials/not-logged-in-navbar') -%>
   
        <div class="hero min-h-screen" style="background-image: url(https://images.unsplash.com/photo-1531249907576-b078dcbcbd28?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=873&q=80);">
            <section>
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>

              <div class="form-control login-form">
                <form action="/signup" enctype="multipart/form-data" method="POST">
                    <div class="mb-3">
                        <label for="userCompany" class="form-label">Company</label>
                        <input type="text" class="form-control" id="userCompany" name="userCompany">
                        <div id="companyHelp" class="form-text">Be sure to format same as your other team members.</div>
                    </div>
                    <div class="mb-3">
                        <label for="userType" class="form-label">User Type</label>
                        <select class="form-control" id="userType" name="userType">
                          <option value="manager">Manager</option>
                          <option value="technician">Technician</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="form-control" id="userName" name="userName">
                    </div>
                    <div class="mb-3">
                      <label for="imgUpload" class="form-label">Profile Pic</label>
                      <label class="input-group">
                        <input type="file" class="form-control" id="profileImageUpload" name="file">
                      </label>
                      <div id="imageHelp" class="form-text">Choose a photo to be your profile picture.</div>
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                      </div>
                    <button type="submit" class="btn btn-primary add-btn">Submit</button>
                  </form>
              </div>
            </section>
        </div>
 

